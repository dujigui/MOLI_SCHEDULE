<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#989"
        android:orientation="vertical"
        tools:context="com.pheynix.moli_schedule.MainActivity">

        <include layout="@layout/tool_bar" android:id="@+id/id_tool_bar"/>

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/image_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <fragment
        android:id="@+id/id_drawer_fragment_in_drawer_layout"
        app:layout="@layout/fragment_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.pheynix.moli_schedule.DrawerFragement"
        tools:layout="@layout/fragment_drawer"></fragment>

</android.support.v4.widget.DrawerLayout>



