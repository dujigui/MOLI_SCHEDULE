<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_summary_daily_item_name"
        android:text="日度总结"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pb_summary_daily_item_percentage"
        android:layout_alignParentTop="true" />

    <com.pheynix.moli_schedule.CustomView.PercentageBar
        android:layout_toRightOf="@id/tv_summary_daily_item_name"
        android:id="@+id/pb_summary_daily_item_percentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>